@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}
<h3>@ViewData["Title"] Fastwire</h3>

<p>
    Website: <a href="https://fastwire.co.uk">https://fastwire.co.uk</a>
</p>
<p>
    Contact:  <a href="https://fastwire.co.uk/Contact">https://fastwire.co.uk/Contact</a>
</p>
<p>
    Privacy Policy: <a asp-page="/Privacy">@Request.Scheme://@Request.Host/Privacy</a>
</p>
<p>
    Open-Source Licenses: <a asp-page="/Credits">@Request.Scheme://@Request.Host/Credits</a>
</p>
<p>
    Version: @if (System.IO.File.Exists("Remotely_Server.dll"))
    {
        <span>@System.Diagnostics.FileVersionInfo.GetVersionInfo("Remotely_Server.dll").FileVersion.ToString()</span>
    }
    else
    {
        <span>1.0.0.0</span>
    }

</p>
